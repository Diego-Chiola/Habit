<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activities.Intro1Activity"
android:background="@drawable/svg_intro1_activity_background"
android:gravity="center_horizontal"
android:orientation="vertical"
android:fitsSystemWindows="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textFontWeight="200"
        android:textSize="40sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to"
        android:textColor="@color/white"
        android:textFontWeight="200"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="@+id/tv_welcome"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_habit"
        android:layout_marginTop="@dimen/_minus15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_logo"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_to" />

</androidx.constraintlayout.widget.ConstraintLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_first_time_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textFontWeight="300"
        android:textSize="27sp"
        android:textColor="@color/black"
        android:text="@string/this_is_your_first_time"/>
    <TextView
        android:id="@+id/tv_lets_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textFontWeight="300"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/let_s_look_what_our_app_can_do"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start_here"
        style="@style/ButtonT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:text="start here"/>

</LinearLayout>


</LinearLayout>



