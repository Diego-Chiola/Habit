<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Habit" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF9472</item>
        <item name="colorPrimaryVariant">#FF9472</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Set default button style -->
        <item name="android:textViewStyle">@style/DefaultTextView</item>
    </style>

    <style name="DefaultTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/sora</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>