<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        app:cardBackgroundColor="#fefefe"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="2dp"
        app:contentPadding="@dimen/_7sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_15sdp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_analytics_icon_item_list"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/ic_rounded_instagram"
                    android:layout_marginRight="@dimen/_25sdp"/>

                <TextView
                    android:id="@+id/analytics_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instagram"
                    android:textFontWeight="500"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time usage:"
                            android:textSize="14sp"
                            android:textFontWeight="300"
                            android:layout_marginRight="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/analytics_card_time_usage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45"
                            android:layout_marginRight="@dimen/_2sdp"/>

                        <TextView
                            android:id="@+id/analytics_card_time_usage_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="min" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="last time open:"
                            android:textSize="14sp"
                            android:textFontWeight="300"
                            android:layout_marginRight="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/analytics_card_last_time_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15:37"
                            android:layout_marginRight="@dimen/_2sdp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical">

                    <Button
                        android:id="@+id/btn_analytics_item_see_more"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_more"
                        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:drawableTint="@color/white"
                        android:textColor="@color/white"
                        android:elevation="0dp"/>

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>