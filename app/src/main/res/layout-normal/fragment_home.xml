<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_left_box_background"
            android:backgroundTint="?android:colorPrimary"
            android:elevation="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_small_screen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_small_screen" />

            <TextView
                android:id="@+id/tv_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_small_screen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/esc_point"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_small_screen" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:backgroundTint="?android:colorPrimary"

            android:background="@drawable/home_left_box_background"
            android:elevation="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_20sdp">

            <TextView
                android:id="@+id/tv_day_time_using_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.20"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:layout_marginRight="@dimen/_1sdp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_unit_day_time_using_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="h"
                android:textSize="@dimen/default_text_small_screen"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/_8sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="using your phone"
                android:textSize="@dimen/default_text_small_screen"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/_20sdp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:srcCompat="@drawable/ic_smartphone_64"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/home_right_box_background"
            android:backgroundTint="?android:colorPrimary"

            android:elevation="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_gravity="end">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:srcCompat="@drawable/ic_rounded_car"
                android:layout_marginRight="@dimen/_5sdp"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:srcCompat="@drawable/ic_rounded_man_running"
                android:layout_marginRight="@dimen/_5sdp"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:srcCompat="@drawable/ic_rounded_chair"
                android:layout_marginRight="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tv_day_time_other_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:layout_marginRight="@dimen/_1sdp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_unit_day_time_other_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_small_screen"
                android:layout_marginRight="@dimen/_8sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="of other actions"
                android:textSize="@dimen/default_text_small_screen"
                android:textColor="@color/white"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_main_app_usages"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="500"
                    android:textSize="18sp"
                    android:text="@string/applications_usages"/>

            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_action_usages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="500"
                    android:textSize="18sp"
                    android:text="@string/actions_usages"/>


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</ScrollView>
